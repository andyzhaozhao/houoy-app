<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:padding="@dimen/view_defalut_margin_10">
        <ImageView
            android:id="@+id/attention_item_img"
            android:layout_width="@dimen/list_image_size"
            android:layout_height="@dimen/list_image_size"
            android:scaleType="centerInside"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical" />
        <LinearLayout
            android:layout_toRightOf="@+id/attention_item_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/view_defalut_margin_10"
            android:orientation="vertical">
            <TextView
                android:id="@+id/attention_item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/customListTitleTextStyle"
                android:text="应急避难所场所"/>
            <TextView
                android:layout_marginTop="@dimen/view_defalut_margin_10"
                android:id="@+id/attention_item_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/customListF17C88ContextTextStyle"
                android:text="应急避难所描述内容"/>
            <TextView
                android:layout_marginTop="@dimen/view_defalut_margin_10"
                android:id="@+id/attention_item_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/customListTextStyle"
                android:text="time"/>
        </LinearLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:background="@color/grayColor"
        android:layout_height="1dp"/>
</LinearLayout>