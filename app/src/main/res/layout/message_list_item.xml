<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:background="@color/whiteColor"
    android:padding="@dimen/list_margin">

    <ImageView
        android:id="@+id/message_item_img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="centerInside"
        android:layout_alignParentLeft="true"
        android:src="@mipmap/learning_center"/>
    <LinearLayout
        android:layout_toRightOf="@+id/message_item_img"
        android:layout_toLeftOf="@+id/message_item_array"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/list_margin"
        android:orientation="vertical">
        <TextView
            android:id="@+id/message_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/textColor"
            android:textSize="18dp"
            android:text="应急避难所场所"/>
        <TextView
            android:layout_marginTop="@dimen/list_margin"
            android:id="@+id/message_item_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/textColor"
            android:textSize="16dp"
            android:text="应急避难所描述内容"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/message_item_array"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:src="@android:drawable/ic_menu_send" />
</RelativeLayout>