<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="gov.smart.health.fragment.VRFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_height="match_parent"
        android:fillViewport="false">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/ll_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/top_margin"
        android:paddingBottom="@dimen/top_margin"
        android:layout_alignParentTop="true"
        >
        <Button
            android:layout_width="wrap_content"
            android:text="返回"
            android:id="@+id/btn_back"
            android:visibility="gone"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="VR运动"
            android:textColor="@color/blackColor"
            android:id="@+id/title"
            android:layout_centerInParent="true"
            />
        <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="选择地点"
        android:textColor="@color/blackColor"
        android:id="@+id/select_park"
        android:layout_alignParentEnd="true"
        />
    </RelativeLayout>
        <com.google.vr.sdk.widgets.video.VrVideoView
            android:id="@+id/video_view"
            android:layout_width="match_parent"
            android:scrollbars="@null"
            android:layout_height="250dip"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <!-- Seeking UI & progress indicator.-->
            <SeekBar
                android:id="@+id/seek_bar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_height="32dp"
                android:layout_weight="8"
                android:layout_width="0dp"/>
            <ImageButton
                android:background="@android:color/transparent"
                android:id="@+id/volume_toggle"
                android:paddingTop="4dp"
                android:paddingStart="0dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/volume_on"/>
        </LinearLayout>
        <TextView
            android:id="@+id/status_text"
            android:text="Loading Video..."
            android:layout_centerInParent="true"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textSize="@dimen/caption_text_size"
            android:paddingStart="32dp"
            android:paddingEnd="32dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:background="@color/grayColor"
            android:layout_height="wrap_content">
        <TextView
            android:text="重点"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textSize="@dimen/caption_text_size"
            android:paddingStart="10dp"
            android:textStyle="bold"
            />
        <TextView
            android:text="收紧腰腹，手臂用力绷紧
用肩部力量抬臂，背部力量下拉手臂，用手臂带动身体的跳跃
小腿尽可能放松，不可低头、仰头
整体有一定的弹性"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textSize="@dimen/caption_text_size"
            android:paddingStart="10dp"
            android:layout_marginTop="10dp"
            />
            <TextView
                android:text="呼吸"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textSize="@dimen/caption_text_size"
                android:paddingStart="10dp"
                />
            <TextView
                android:text="收紧腰腹，手臂用力绷紧
用肩部力量抬臂，背部力量下拉手臂，用手臂带动身体的跳跃
小腿尽可能放松，不可低头、仰头
整体有一定的弹性"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textSize="@dimen/caption_text_size"
                android:paddingStart="10dp"
                android:layout_marginTop="10dp"
                />
        </LinearLayout>
        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:clipChildren="false" >
        </android.support.v4.view.ViewPager>
    </LinearLayout>
    </ScrollView>
</FrameLayout>
