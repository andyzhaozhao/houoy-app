<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:background="@color/whiteColor"
    android:orientation="vertical">
    <RelativeLayout
        android:padding="@dimen/view_defalut_margin_10"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/myattention_item_img"
            android:layout_width="@dimen/list_image_size"
            android:layout_height="@dimen/list_image_size"
            android:scaleType="centerInside"
            android:layout_alignParentLeft="true"/>
        <LinearLayout
            android:layout_toRightOf="@+id/myattention_item_img"
            android:layout_toLeftOf="@+id/btn_goto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/list_margin"
            android:orientation="vertical">
            <TextView
                android:id="@+id/myattention_item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/customListTitleTextStyle"
                android:text="应急避难所场所"/>
            <TextView
                android:layout_marginTop="@dimen/list_margin"
                android:id="@+id/myattention_item_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/customListContextTextStyle"
                android:text="应急避难所描述内容"/>
        </LinearLayout>
        <include layout="@layout/btn_goto"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:background="@color/grayColor"
        android:layout_height="1dp"/>
</LinearLayout>