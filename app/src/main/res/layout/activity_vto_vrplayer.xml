<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="gov.smart.health.activity.vr.VTOVRPlayerActivity">
    <RelativeLayout
        android:id="@+id/activity_player"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fdfdfd">
        <RelativeLayout
            android:id="@+id/activity_rlParent"
            android:layout_width="match_parent"
            android:layout_height="220dp">
            <RelativeLayout
                android:id="@+id/activity_rlPlayView"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/activity_rlToolbar"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_alignParentBottom="true" >
                <include layout="@layout/video_play_tools" />
            </RelativeLayout>
            <ImageView
                android:id="@+id/activity_imgBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/view_defalut_margin"
                android:layout_marginTop="@dimen/view_defalut_margin"
                android:src="@drawable/video_back_btn"/>
            <ImageView
                android:id="@+id/activity_imgBuffer"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:visibility="gone"
                android:src="@drawable/loading_blue_1"/>
        </RelativeLayout>

    </RelativeLayout>
    <ScrollView
        android:layout_below="@+id/activity_player"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="false">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_margin="@dimen/view_defalut_margin"
                android:layout_height="wrap_content">
                <TextView
                    android:text="重点"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:textSize="@dimen/text_size_sub_title"
                    android:textColor="@color/textColor"
                    android:textStyle="bold"
                    />
                <View
                    android:layout_width="match_parent"
                    android:background="@color/grayColor"
                    android:layout_height="1dp"/>
                <TextView
                    android:id="@+id/tv_detail"
                    android:text="收紧腰腹"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:textSize="@dimen/text_size_context"
                    android:textColor="@color/textColor"
                    android:layout_marginTop="@dimen/view_defalut_margin"
                    />
            </LinearLayout>
        </LinearLayout></ScrollView>
</RelativeLayout>
