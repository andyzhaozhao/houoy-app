<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="gov.smart.health.activity.vr.VTOVRPlayerActivity">
    <RelativeLayout
        android:id="@+id/ll_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/top_margin"
        android:paddingBottom="@dimen/top_margin"
        android:layout_alignParentTop="true"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="上肢运动"
            android:textColor="@color/blackColor"
            android:id="@+id/title"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_below="@+id/ll_title"
        android:id="@+id/activity_player"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fdfdfd">
        <RelativeLayout
            android:id="@+id/activity_rlParent"
            android:layout_width="match_parent"
            android:layout_height="220dp">
            <RelativeLayout
                android:id="@+id/activity_rlPlayView"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/activity_rlToolbar"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_alignParentBottom="true" >
                <include layout="@layout/video_play_tools" />
            </RelativeLayout>
            <ImageView
                android:id="@+id/activity_imgBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/middle_spacing"
                android:layout_marginTop="@dimen/small_spacing"
                android:src="@drawable/video_back_btn"/>
            <ImageView
                android:id="@+id/activity_imgBuffer"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:visibility="gone"
                android:src="@drawable/loading_blue_1"/>
        </RelativeLayout>

    </RelativeLayout>
    <ScrollView
        android:layout_below="@+id/activity_player"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="false">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_margin="10dp"
                android:background="@color/grayColor"
                android:layout_height="wrap_content">
                <TextView
                    android:text="重点"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:textSize="@dimen/caption_text_size"
                    android:paddingLeft="10dp"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/tv_detail"
                    android:text="收紧腰腹"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:textSize="@dimen/caption_text_size"
                    android:paddingLeft="10dp"
                    android:layout_marginTop="10dp"
                    />
            </LinearLayout>
        </LinearLayout></ScrollView>
</RelativeLayout>
