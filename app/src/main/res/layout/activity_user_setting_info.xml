<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="gov.smart.health.activity.self.UserSettingInfoActivity">
    <RelativeLayout
        android:id="@+id/ll_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical">
        <include layout="@layout/btn_back" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="编辑我的信息"
            style="@style/customTitleItemStyle"
            android:layout_centerInParent="true"
            android:id="@+id/title"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:background="@color/blackLine"
        android:layout_height="0.5dp"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_below="@+id/ll_title"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:gravity="center_horizontal"
            android:layout_margin="@dimen/view_defalut_margin_20"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/et_update_user_icon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <gov.smart.health.activity.views.CircleImageView
                    android:id="@+id/img_update_user_icon"
                    android:layout_gravity="center"
                    android:layout_width="@dimen/list_image_size"
                    android:layout_height="@dimen/list_image_size"
                    android:layout_centerInParent="true"
                    android:layout_margin="@dimen/view_defalut_margin_10"
                    android:src="@mipmap/person_default_icon" />
            </RelativeLayout>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/et_update_user_name"
                style="@style/customEditTextF18C35Style"
                android:hint="姓名"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/et_update_user_age"
                android:layout_marginTop="@dimen/view_defalut_margin_20"
                android:hint="年龄"
                style="@style/customEditTextF18C35Style"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/et_update_user_content"
                android:layout_marginTop="@dimen/view_defalut_margin_20"
                android:hint="格言"
                style="@style/customEditTextF18C35Style"
                android:imeOptions="actionDone"
                />
            <Button
                android:id="@+id/btn_update_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/customBtnChartStyle"
                android:text="更新"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
