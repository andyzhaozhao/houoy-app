<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/whiteColor"
    android:orientation="vertical"
    android:padding="@dimen/list_margin">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.androidnetworking.widget.ANImageView
            android:id="@+id/sport_item_img"
            android:layout_width="@dimen/list_image_size"
            android:layout_height="@dimen/list_image_size"
            android:scaleType="center"
            android:layout_alignParentLeft="true"
            android:src="@mipmap/healthicon"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:gravity="center_horizontal"
                android:padding="5dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/sport_item_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textColor"
                    android:textSize="18dp"
                    android:text="上肢伸展运动"/>
                <TextView
                    android:layout_marginTop="@dimen/list_margin"
                    android:id="@+id/sport_item_download"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textColor"
                    android:textSize="18dp"
                    android:layout_alignParentRight="true"
                    android:text="已下载"/>
            </RelativeLayout>

            <TextView
                android:layout_marginTop="@dimen/list_margin"
                android:id="@+id/sport_item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textColor"
                android:textSize="16dp"
                android:layout_alignParentRight="true"
                android:layout_alignBottom="@+id/sport_item_img"
                android:padding="5dp"
                android:text="简介信息"/>
        </LinearLayout>

    </LinearLayout>

    <ProgressBar
        android:id="@+id/downloadprogressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>