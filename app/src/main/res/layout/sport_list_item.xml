<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:background="@color/whiteColor"
    android:padding="@dimen/list_margin">

    <ImageView
        android:id="@+id/sport_item_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerInside"
        android:layout_alignParentLeft="true"
        android:src="@mipmap/learning_center"/>
    <TextView
        android:id="@+id/sport_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:textColor="@color/textColor"
        android:textSize="18dp"
        android:padding="10dp"
        android:text="上肢伸展运动"/>
    <TextView
        android:layout_marginTop="@dimen/list_margin"
        android:id="@+id/sport_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/textColor"
        android:textSize="16dp"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/sport_item_img"
        android:padding="10dp"
        android:text="5分钟"/>
    <TextView
        android:layout_marginTop="@dimen/list_margin"
        android:id="@+id/sport_item_download"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/textColor"
        android:textSize="16dp"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/sport_item_img"
        android:padding="10dp"
        android:text="已下载"/>

</RelativeLayout>