<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="gov.smart.health.activity.vr.SportShareActivity">
            <RelativeLayout
                android:id="@+id/ll_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="分享运动"
                    android:textColor="@color/blackColor"
                    android:id="@+id/title"
                    android:layout_centerInParent="true"
                    />
            </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/rl_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/self_bgimg"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/sport_setting" />
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_margin="@dimen/view_defalut_margin"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_share_heart_times"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/blackColor"
                        android:text="心率：120" />
                </LinearLayout>
            </RelativeLayout>
            <TextView
                android:layout_margin="@dimen/view_defalut_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/textColor"
                android:textSize="@dimen/text_size_context"
                android:text="分享心得" />
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/view_defalut_margin"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/editText"
                    android:layout_above="@+id/ll_btn"
                    android:layout_width="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_height="200dp"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/text_size_context"
                    android:ems="10"
                    android:gravity="start"
                    android:background="@drawable/textviewstyle"
                    android:hint="告诉大家点什么吧！"
                    android:inputType="textMultiLine" />
                <RelativeLayout
                    android:id="@+id/ll_btn"
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/view_defalut_margin"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/btn_share"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/lightskyblue"
                        android:textSize="@dimen/text_size_context"
                        android:background="@drawable/buttonstyle"
                        android:text="分享"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
