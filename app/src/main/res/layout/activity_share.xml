<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="gov.smart.health.activity.vr.ShareActivity">

            <RelativeLayout
                android:id="@+id/ll_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">
                <Button
                    android:layout_width="wrap_content"
                    android:text="返回"
                    android:id="@+id/btn_back"
                    android:visibility="invisible"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="分享运动"
                    android:textColor="@color/blackColor"
                    android:id="@+id/title"
                    android:layout_centerInParent="true"
                    />
            </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/rl_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/self_bgimg"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/share" />
                <TextView
                    android:id="@+id/tv_share_mark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textColor="@color/whiteColor"
                    android:textStyle="bold"
                    android:text="得分：89" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:padding="20dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_share_times"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/whiteColor"
                        android:textStyle="bold"
                        android:text="运动次数：60" />
                    <TextView
                        android:id="@+id/tv_share_heart_times"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/whiteColor"
                        android:textStyle="bold"
                        android:text="心率：120" />
                    <TextView
                        android:id="@+id/tv_share_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/whiteColor"
                        android:textStyle="bold"
                        android:text="运动时间：25" />
                </LinearLayout>
            </RelativeLayout>
            <TextView
                android:padding="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/blackColor"
                android:textStyle="bold"
                android:text="分享心得" />
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/editText"
                    android:layout_above="@+id/ll_btn"
                    android:layout_width="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_height="200dp"
                    android:ems="10"
                    android:gravity="start"
                    android:hint="告诉大家点什么吧！"
                    android:inputType="textMultiLine" />
                <RelativeLayout
                    android:id="@+id/ll_btn"
                    android:layout_width="match_parent"
                    android:padding="10dp"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/btn_share"
                        android:layout_alignParentStart="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="分享"/>
                    <Button
                        android:id="@+id/btn_share_cancel"
                        android:layout_alignParentEnd="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="取消"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
