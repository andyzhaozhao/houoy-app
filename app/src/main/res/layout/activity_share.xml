<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="gov.smart.health.activity.vr.SportShareActivity">
    <RelativeLayout
        android:id="@+id/ll_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">
        <include layout="@layout/btn_back" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="分享本次运动记录"
            style="@style/customTitleItemStyle"
            android:id="@+id/title"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:background="@color/blackLine"
        android:layout_height="0.5dp"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="完成度：80%"
                android:layout_marginTop="@dimen/view_defalut_margin_10"
                android:padding="@dimen/view_defalut_margin_10"
                android:id="@+id/tv_video_completion"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textSize="30sp"
                android:textColor="@color/chartreuse"
                android:focusable="true"
                android:focusableInTouchMode="true"
                >
                <requestFocus />
            </TextView>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <View
                    android:layout_marginTop="@dimen/view_defalut_margin_10"
                    android:layout_width="match_parent"
                    android:background="@color/blackLine"
                    android:layout_height="0.5dp"/>
                <TextView
                    android:text="名称"
                    android:padding="@dimen/view_defalut_margin_10"
                    android:id="@+id/tv_video_name"
                    android:background="@color/whiteColor"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    style="@style/customF18C35TextStyle"
                    />
                <View
                    android:layout_width="match_parent"
                    android:background="@color/blackLine"
                    android:layout_height="0.5dp"/>
                <View
                    android:layout_marginTop="@dimen/view_defalut_margin_10"
                    android:layout_width="match_parent"
                    android:background="@color/blackLine"
                    android:layout_height="0.5dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:background="@color/whiteColor"
                    android:padding="@dimen/view_defalut_margin_10"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="锻炼时长"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        style="@style/customF18C35TextStyle"
                        />
                    <TextView
                        android:text="120秒"
                        android:id="@+id/tv_video_length"
                        android:layout_marginTop="@dimen/view_defalut_margin_10"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        style="@style/customContextF13TextStyle"
                        />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:background="@color/blackLine"
                    android:layout_height="0.5dp"/>
                <View
                    android:layout_marginTop="@dimen/view_defalut_margin_10"
                    android:layout_width="match_parent"
                    android:background="@color/blackLine"
                    android:layout_height="0.5dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:background="@color/whiteColor"
                    android:padding="@dimen/view_defalut_margin_10"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="本次平均心率"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        style="@style/customF18C35TextStyle"
                        />
                    <TextView
                        android:text="120次/分"
                        android:id="@+id/tv_actor_heart_rate"
                        android:layout_marginTop="@dimen/view_defalut_margin_10"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        style="@style/customContextF13TextStyle"
                        />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:background="@color/blackLine"
                    android:layout_height="0.5dp"/>
                <View
                    android:layout_marginTop="@dimen/view_defalut_margin_10"
                    android:layout_width="match_parent"
                    android:background="@color/blackLine"
                    android:layout_height="0.5dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:background="@color/whiteColor"
                    android:padding="@dimen/view_defalut_margin_10"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="实际消耗卡路里"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        style="@style/customF18C35TextStyle"
                        />
                    <TextView
                        android:text="10cal"
                        android:id="@+id/tv_actor_cal"
                        android:layout_marginTop="@dimen/view_defalut_margin_10"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        style="@style/customContextF13TextStyle"
                        />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:background="@color/blackLine"
                    android:layout_height="0.5dp"/>
                <View
                    android:layout_marginTop="@dimen/view_defalut_margin_10"
                    android:background="@color/blackLine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <EditText
                    android:id="@+id/editText"
                    android:layout_above="@+id/ll_btn"
                    android:layout_width="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_height="200dp"
                    android:textAlignment="textStart"
                    android:gravity="start"
                    style="@style/customEditTextBlackBoaderStyle"
                    android:hint="告诉大家点什么吧！"
                    android:inputType="textMultiLine" />
                <Button
                    android:id="@+id/btn_share"
                    android:layout_margin="@dimen/view_defalut_margin_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/customBtnChartStyle"
                    android:text="分享"/>
                <Button
                    android:id="@+id/btn_cancel_share"
                    android:layout_margin="@dimen/view_defalut_margin_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/customBtnChartStyle"
                    android:background="@drawable/buttonstyle_red"
                    android:text="取消"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
