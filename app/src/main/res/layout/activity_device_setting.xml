<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/whitesmoke_bg"
    tools:context="gov.smart.health.activity.self.DeviceSettingActivity">
    <RelativeLayout
        android:id="@+id/ll_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical">
        <include layout="@layout/btn_back" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选择设备"
            android:id="@+id/title"
            style="@style/customTitleItemStyle"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:background="@color/blackLine"
        android:layout_height="0.5dp"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_below="@+id/ll_title"
        android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_margin="@dimen/view_defalut_margin_10"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/customContextTextStyle"
                android:text="VR眼镜选择" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/view_defalut_margin_10"
                style="@style/customContextDarkGrayTextStyle"
                android:text="已选择：" />
            <TextView
                android:id="@+id/btn_setting_device_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/customContextDarkGrayTextStyle"
                android:text="暴风小D" />
        </LinearLayout>
        <View
            android:layout_marginTop="@dimen/view_defalut_margin_10"
            android:layout_width="match_parent"
            android:background="@color/blackLine"
            android:layout_height="0.5dp"/>
        <RadioGroup
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_marginBottom="15dp"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:layout_height="wrap_content" >

        <RelativeLayout
            android:id="@+id/btn_setting_device1"
            android:layout_width="match_parent"
            android:background="@color/whiteColor"
            android:paddingTop="@dimen/view_defalut_margin_10"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/view_defalut_margin_10"
                android:paddingLeft="@dimen/view_defalut_margin_10"
                style="@style/customContextTextStyle"
                android:text="暴风小D" />
            <RadioButton
                android:id="@+id/device_r1"
                android:clickable="false"
                android:layout_marginRight="@dimen/view_defalut_margin_10"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:buttonTint="@color/textColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:background="@color/blackLine"
            android:layout_height="0.5dp"/>
        <RelativeLayout
            android:id="@+id/btn_setting_device2"
            android:layout_width="match_parent"
            android:background="@color/whiteColor"
            android:paddingTop="@dimen/view_defalut_margin_10"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/view_defalut_margin_10"
                android:paddingLeft="@dimen/view_defalut_margin_10"
                style="@style/customContextTextStyle"
                android:text="暴风魔镜2代" />
            <RadioButton
                android:id="@+id/device_r2"
                android:clickable="false"
                android:layout_marginRight="@dimen/view_defalut_margin_10"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:buttonTint="@color/textColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        </RadioGroup>
        <View
            android:layout_width="match_parent"
            android:background="@color/blackLine"
            android:layout_height="0.5dp"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_margin="@dimen/view_defalut_margin_10"
            android:layout_height="wrap_content">
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/customContextTextStyle"
                android:text="智能手环选择" />
            <TextView
                android:id="@+id/tv_setting_fitpolo_device"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/view_defalut_margin_10"
                style="@style/customContextDarkGrayTextStyle"
                android:text="已绑定：" />
            </LinearLayout>
        <Button
                android:id="@+id/btn_setting_device"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
            android:layout_margin="@dimen/view_defalut_margin_10"

            style="@style/customBtnChartStyle"
                android:text="搜索Fitpolo手环" />
        <View
            android:layout_width="match_parent"
            android:background="@color/grayColor"
            android:layout_height="1dp"/>
    </LinearLayout>
    </ScrollView>
</LinearLayout>
